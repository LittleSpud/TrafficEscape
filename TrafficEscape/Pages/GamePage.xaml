<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="TrafficEscape.Pages.GamePage">
    <Grid>
        <Image x:Name="Road" Source="road.png" Aspect="Fill"/>
        <AbsoluteLayout x:Name="GameArea"/>


        <Label x:Name="ScoreLabel"
               FontSize="32"
               TextColor="White"
               Margin="20"/>

        <Button Text="Pause"
                Clicked="PauseClicked"
                HorizontalOptions="End"
                VerticalOptions="Start"/>

    </Grid>
</ContentPage>