<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="TrafficEscape.Pages.MainMenuPage">

    <VerticalStackLayout Spacing="25" VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Traffic Escape"
               FontSize="48"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,40,0,20"/>

        <Button Text="Start Game"
                FontSize="24"
                HorizontalOptions="Center"
                WidthRequest="200"
                Clicked="StartGame"/>

        <Button Text="Shop"
                FontSize="19"
                HorizontalOptions="Center"
                WidthRequest="200"
                Margin="0,20,0,0"
                Clicked="OpenShop"/>

        <Button Text="High Scores"
                FontSize="19"
                HorizontalOptions="Center"
                WidthRequest="200"
                Margin="0,20,0,0"
                Clicked="HighScores"/>

        <Button Text="Settings" 
                FontSize="19"
                HorizontalOptions="Center"
                WidthRequest="200"
                Margin="0,20,0,0"
                Clicked="OpenSettings"/>

    </VerticalStackLayout>

</ContentPage>