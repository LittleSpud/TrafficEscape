<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="TrafficEscape.Pages.MainMenuPage"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TrafficEscape.ViewModels"
             Title="Traffic Escape">
	<ContentPage.BindingContext>
		<vm:MainMenuViewModel />
	</ContentPage.BindingContext>

	<Grid Padding="30">
		<Grid.RowDefinitions>
			<RowDefinition Height="2*" />
			<RowDefinition Height="3*" />
		</Grid.RowDefinitions>

		<!-- GAME TITLE -->
		<VerticalStackLayout Grid.Row="0"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">
			<Label Text="TRAFFIC ESCAPE"
                   FontSize="36"
                   TextColor="White"
                   HorizontalOptions="Center">
				<Label.Triggers>
					<EventTrigger Event="Loaded">
						<BeginAnimation TargetProperty="Opacity"
                                        Duration="1500"
                                        From="0"
                                        To="1" />
					</EventTrigger>
				</Label.Triggers>
			</Label>
		</VerticalStackLayout>

		<!-- BUTTONS -->
		<VerticalStackLayout Grid.Row="1"
                             Spacing="20"
                             VerticalOptions="Center">

			<Button Text="PLAY"
                    FontSize="22"
                    BackgroundColor="#2c3e50"
                    TextColor="White"
                    Command="{Binding PlayCommand}" />

			<Button Text="SETTINGS"
                    FontSize="22"
                    BackgroundColor="#34495e"
                    TextColor="White"
                    Command="{Binding SettingsCommand}" />

			<Button Text="SHOP"
                    FontSize="22"
                    BackgroundColor="#16a085"
                    TextColor="White"
                    Command="{Binding ShopCommand}" />

			<Button Text="QUIT"
                    FontSize="22"
                    BackgroundColor="#c0392b"
                    TextColor="White"
                    Command="{Binding QuitCommand}" />

		</VerticalStackLayout>
	</Grid>

</ContentPage>