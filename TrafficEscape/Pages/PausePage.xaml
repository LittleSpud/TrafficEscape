<ContentPage
    x:Class="TrafficEscape.Pages.PausePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Paused"
    BackgroundColor="#CC000000">

    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="20"
        Padding="30">

        <Label
            Text="Paused"
            FontSize="32"
            TextColor="White"
            HorizontalOptions="Center" />

        <Button
            Text="Resume"
            FontSize="20"
            BackgroundColor="#2ecc71"
            TextColor="White"
            Clicked="OnResume" />

        <Button
            Text="Quit to Menu"
            FontSize="20"
            BackgroundColor="#e74c3c"
            TextColor="White"
            Clicked="OnQuit" />

    </VerticalStackLayout>
</ContentPage>
